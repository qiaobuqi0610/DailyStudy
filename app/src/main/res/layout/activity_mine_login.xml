<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical"
    tools:context="test.ds.com.dailystudy.activity.MineLoginActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#f95d51">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/landback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ebebeb" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="60px"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/landname" />

        <EditText
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80px"
            android:background="#ffffff"
            android:hint="手机号/邮箱"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ebebeb" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/landcode" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80px"
            android:background="#ffffff"
            android:hint="手机号/邮箱"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ebebeb" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25px"
            android:layout_marginTop="25px"
            android:text="忘记密码?"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="700px"
        android:layout_height="75px"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:background="@mipmap/lanlog"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <Button
        android:id="@+id/login_zhuce"
        android:layout_width="700px"
        android:layout_height="75px"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:background="@mipmap/landlogin"
        android:text="立即注册"
        android:textColor="#f95d51"
        android:textSize="30px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px">

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="50px"
            android:src="@mipmap/share_qq" />

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/share_wxchat" />

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:src="@mipmap/share_weibo" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
