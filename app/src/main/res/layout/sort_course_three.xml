<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/course_list_ll"
            android:layout_width="0px"
            android:layout_height="88px"

            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/course_list_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="美状美发"
                android:textColor="#333333"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/course_list_total_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12px" />


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="88px"
            android:background="#cacaca" />


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/course_list_ll_Filter"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/course_list_filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="筛选"
                android:textColor="#333333"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/course_list_filter_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6px" />


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="88px"
            android:background="#cacaca" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/course_list_ll_sort"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/course_list_sort_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="排序"
                android:textColor="#333333"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/course_list_sort_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12px" />


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cacaca" />


</com.zhy.autolayout.AutoLinearLayout>
