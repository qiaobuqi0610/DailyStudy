<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="13dp"
        android:divider="@drawable/sort_shape_divider_linear"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/course_list_item_iv_main"
                android:layout_width="110dp"
                android:layout_height="67dp"
                android:src="@mipmap/course_pic" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/course_list_item_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15dp"
                android:textColor="#333333"
                android:text="ios开发实战" />

            <TextView
                android:id="@+id/course_list_item_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#999999"
                android:layout_marginTop="8dp"
                android:text="麦子学院" />

            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/course_list_item_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="免费" />

                <LinearLayout

                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/course_list_item_iv_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/online" />

                    <TextView
                        android:id="@+id/course_list_item_tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="11dp"
                        android:textColor="#999999"
                        android:layout_marginLeft="5dp"
                        android:text="152人在学" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
