<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:divider="@drawable/sort_shape_divider_linear"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/sort_rl_item1"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">


            <ImageView
                android:id="@+id/sort_icon_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/heart" />

            <TextView
                android:id="@+id/sort_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/sort_icon_iv1"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/sort_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>

    </LinearLayout>

    <com.yxjy.app.view.MyGriveView
        android:id="@+id/sort_gridview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:paddingBottom="4dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:visibility="gone">
    </com.yxjy.app.view.MyGriveView>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:divider="@drawable/sort_shape_divider_linear"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/sort_rl_item2"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">


            <ImageView
                android:id="@+id/sort_icon_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/coffee" />

            <TextView
                android:id="@+id/sort_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/sort_icon_iv2"
                android:gravity="center"

                android:textColor="#333333"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/sort_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>

    </LinearLayout>

    <com.yxjy.app.view.MyGriveView
        android:id="@+id/sort_gridview2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:paddingBottom="4dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:visibility="gone">

    </com.yxjy.app.view.MyGriveView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:divider="@drawable/sort_shape_divider_linear"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/sort_rl_item3"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">


            <ImageView
                android:id="@+id/sort_icon_iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/diamond" />

            <TextView
                android:id="@+id/sort_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/sort_icon_iv3"
                android:gravity="center"

                android:textColor="#333333"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/sort_iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>

    </LinearLayout>

    <com.yxjy.app.view.MyGriveView
        android:id="@+id/sort_gridview3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:paddingBottom="4dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:visibility="gone"></com.yxjy.app.view.MyGriveView>


</LinearLayout>
